{
    "containers": [
        {
            "id": "nginx-prod",
            "labels": {
                "app": "nginx"
            },
            "env": [
                "APP_NAME=nginx"
            ],
            "k8s": {
                "namespace": "production",
                "pod": "nginx-pod-1",
                "container_name": "nginx",
                "labels": {
                    "app.kubernetes.io/name": "nginx"
                },
                "paused_container": false
            }
        },
        {
            "id": "nginx-dev",
            "labels": {
                "app": "nginx"
            },
            "env": [
                "APP_NAME=nginx"
            ],
            "k8s": {
                "namespace": "development",
                "pod": "nginx-pod-2",
                "container_name": "nginx",
                "labels": {
                    "app.kubernetes.io/name": "nginx"
                },
                "paused_container": false
            }
        },
        {
            "id": "nginx-test",
            "labels": {
                "app": "nginx"
            },
            "env": [
                "APP_NAME=nginx"
            ],
            "k8s": {
                "namespace": "testing",
                "pod": "nginx-pod-3",
                "container_name": "nginx",
                "labels": {
                    "app.kubernetes.io/name": "nginx"
                },
                "paused_container": false
            }
        },
        {
            "id": "redis-prod",
            "labels": {
                "app": "redis"
            },
            "env": [
                "APP_NAME=redis"
            ],
            "k8s": {
                "namespace": "production",
                "pod": "redis-pod-1",
                "container_name": "redis",
                "labels": {
                    "app.kubernetes.io/name": "redis"
                },
                "paused_container": false
            }
        }
    ],
    "test_cases": [
        {
            "name": "k8s_namespace_exact_match",
            "description": "测试命名空间精确匹配",
            "filters": {
                "K8sNamespaceRegex": "production"
            },
            "expected_matched_ids": [
                "nginx-prod",
                "redis-prod"
            ]
        },
        {
            "name": "k8s_namespace_regex_match",
            "description": "测试命名空间正则匹配（如 ^prod-.*）",
            "filters": {
                "K8sNamespaceRegex": "^prod.*"
            },
            "expected_matched_ids": [
                "nginx-prod",
                "redis-prod"
            ]
        },
        {
            "name": "k8s_namespace_no_match",
            "description": "测试命名空间不匹配的情况",
            "filters": {
                "K8sNamespaceRegex": "staging"
            },
            "expected_matched_ids": []
        },
        {
            "name": "k8s_namespace_empty_filter",
            "description": "测试未配置命名空间过滤时的默认行为",
            "filters": {},
            "expected_matched_ids": [
                "nginx-prod",
                "nginx-dev",
                "nginx-test",
                "redis-prod"
            ]
        }
    ]
}